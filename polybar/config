[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:color0:#333}
foreground = ${xrdb:foreground:#EEE}
foreground-alt = ${xrdb:color7:#FFF}
fade = ${xrdb:fadeColor:#888}
primary = ${xrdb:color6:#0CE}
secondary = ${xrdb:color14:#0EC}
alert = ${xrdb:color1:#E11}

[bar/top]
width = 100%
height = 32
radius = 0
fixed-center = true
dpi = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.secondary}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Inter:style=Regular:size=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;1
font-2 = Font Awesome 5 Free:style=solid:size=10;1
font-3 = Inter:style=Bold:size=10;1
font-4 = Fira Code:style=Medium:size=10;1

modules-left = i3
modules-center = xwindow mpd
modules-right = filesystem memory cpu temperature enp0s31f6 date xkeyboard

tray-position = right
tray-padding = 2

wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
