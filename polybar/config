label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted = <label-mounted> <bar-used>
format-mounted-prefix = 
format-mounted-prefix-font = 3
format-mounted-prefix-foreground = ${colors.fade}
format-mounted-prefix-padding = 2

format-unmounted = <label-unmounted>
format-unmounted-prefix-font = 3
format-unmounted-prefix-padding = 2

label-mounted = %{T5}%mountpoint%%{T-}
label-unmounted = %{T5}%mountpoint%%{T-} not mounted
label-unmounted-foreground = ${colors.foreground-alt}

bar-used-width = 10
bar-used-indicator = ▊
bar-used-indicator-font = 2
bar-used-indicator-foreground = ${colors.secondary}
bar-used-fill = ▊
